@model Movies.WebUI.Models.PageInfo

@{
    var prevClass = "disabled";
    var prevPage = 1;
    if (Model.CurrentPage > 1)
    {
        prevClass = "";
        prevPage = Model.CurrentPage - 1;
    }

    var nextClass = "disabled";
    var nextPage = 1;
    if (Model.CurrentPage < Model.TotalPage)
    {
        nextClass = "";
        nextPage = Model.CurrentPage + 1;
    }
}

<div aria-label="Page navigation" class="center">
    <ul class="pagination">
        @if (String.IsNullOrEmpty(prevClass))
        {
            <li>
                <a ng-click="paginateMovie(@prevPage)" aria-label="Previous"><span aria-hidden="true">&laquo;</span></a>
            </li>
        }
        else
        {
            <li class="@prevClass">
                <a ng-click="paginateMovie(@nextPage)" aria-label="Previous"><span aria-hidden="true">&laquo;</span></a>
            </li>
        }

        @for (var i = 1; i <= Model.TotalPage; i++)
        {
            if (i == Model.CurrentPage)
            {
                <li class="active">
                    <a ng-click="paginateMovie(@i)">@i <span class="sr-only">(current)</span></a>
                </li>
            }
            else
            {
                <li>
                    <a ng-click="paginateMovie(@i)">@i</a>
                </li>
            }
        }

        @if (String.IsNullOrEmpty(nextClass))
        {
            <li>
                <a ng-click="paginateMovie(@nextPage)" aria-label="Next"><span aria-hidden="true">&raquo;</span></a>
            </li>
        }
        else
        {
            <li class="@nextClass">
                <a ng-click="paginateMovie(@nextPage)" aria-label="Next"><span aria-hidden="true">&raquo;</span></a>
            </li>
        }
    </ul>
</div>

